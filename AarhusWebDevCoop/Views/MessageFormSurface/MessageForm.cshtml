@model AarhusWebDevCoop.ViewModels.MessageForm
@{
    Layout = null;
}

@using (Html.BeginUmbracoForm("HandleFormSubmit", "MessageFormSurface", new object { }, new { @class = "form-horizontal" }))
{
    <div class="form-group">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.FullName)
    </div>
    <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email)

    </div>
    <div class="form-group">
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
            @Html.ValidationMessageFor(m => m.Subject)

    </div>
    <div class="form-group">
            @Html.TextBoxFor(m => m.Body, new { @class = "form-control", placeholder = "Message" })
            @Html.ValidationMessageFor(m => m.Body)
    </div>
    <div class="form-group">
            <button id="contact-submit" type="submit" class="btn btn-primary input-medium">Send</button>
    </div>
} 